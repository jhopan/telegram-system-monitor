# Bot Telegram Token (dapatkan dari @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ========================================
# ADMIN CONFIGURATION
# ========================================

# Enable/Disable Authentication (true/false)
# Jika false, semua user bisa akses bot
ENABLE_AUTH=true

# Admin User IDs (dapatkan dari @userinfobot)
# Pisahkan dengan koma jika lebih dari satu
# Contoh: ADMIN_USER_IDS=123456789,987654321,555555555
ADMIN_USER_IDS=123456789,987654321

# Admin Usernames (tanpa @)
# Pisahkan dengan koma jika lebih dari satu
# Contoh: ADMIN_USERNAMES=johndoe,janedoe,admin
ADMIN_USERNAMES=yourusername

# ========================================
# FEATURE CONFIGURATION
# ========================================

# Enable service control (start/stop/restart service)
# Memerlukan bot dijalankan dengan sudo/root
ENABLE_SERVICE_CONTROL=true

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========================================
# MESSAGE CONFIGURATION
# ========================================

# Maximum message length before splitting
MAX_MESSAGE_LENGTH=4000
